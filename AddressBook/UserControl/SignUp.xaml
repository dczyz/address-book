<UserControl x:Class="AddressBook.UserControl.SignUp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AddressBook.UserControl"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="White">
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Height="300" Width="300">
            <Label x:Name="UsernameLabel" Content="Username"/>
            <TextBox x:Name="UsernameTextBox" Height="23" TextWrapping="Wrap"/>
            <Label x:Name="PasswordLabel" Content="Password"/>
            <PasswordBox x:Name="PasswordPasswordBox" Height="23"/>
            <Label x:Name="ConfirmPasswordLabel" Content="Confirm password"/>
            <PasswordBox x:Name="ConfirmPasswordPasswordBox" Height="23"/>
            <Button x:Name="SignUpButton" Content="SignUp"/>
        </StackPanel>

    </Grid>
</UserControl>
